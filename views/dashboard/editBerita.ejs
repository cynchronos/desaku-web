<div class="card">
    <div class="mx-3 my-3">
        <form action="/dashboard/berita?_method=PUT" method="POST">
            <input type="hidden" name="id" value="<%= berita._id %>">
            <div class="form-group">
                <label for="berita" class="form-control-label">Judul Berita</label>
                <input class="form-control" type="text" id="berita" name="berita" value="<%= berita.berita %>">
            </div>
            <div class="form-group">
                <label for="slug" class="form-control-label">Slug</label>
                <input class="form-control" type="text" id="slug" name="slug" value="<%= berita.slug %>">
            </div>
            <input type="hidden" name="date" id="date" value="<%- berita.date %> ">
            <div class="form-group">
                <label for="isi">Konten Berita</label>
                <input id="isi" type="hidden" name="isi" value="<%- berita.isi %> ">
                <trix-editor input="isi" class="form-control"></trix-editor>
            </div>
            <button type="submit" class="btn bg-gradient-warning col-lg-2">Edit</button>
        </form>
    </div>
</div>